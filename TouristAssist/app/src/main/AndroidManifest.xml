<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs442.faaltene.touristassist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainNavigation"
            android:label="Tourist Assisting Application"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Restaurant_detail"
            android:label="Restaurant Details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Hotel_detail"
            android:label="Hotel Details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Show_detail"
            android:label="Show Details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Mall_detail"
            android:label="Mall Details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Hospital_detail"
            android:label="Hospital Details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Bar_detail"
            android:label="Bar Details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Museum_detail"
            android:label="Attraction Details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
